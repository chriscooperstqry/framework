<?xml version="1.0" encoding="utf-8"?>
<nz.co.cjc.base.framework.views.FRelativeLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_holder_category_height"
    android:background="@android:color/white"
    app:foreground="@drawable/ripple_selector_no_mask">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/view_holder_category_name_margins"
        android:layout_marginLeft="@dimen/view_holder_category_name_margins"
        android:layout_marginRight="@dimen/view_holder_category_name_margins"
        android:layout_marginStart="@dimen/view_holder_category_name_margins"
        android:textColor="@color/category_name_color"
        android:textSize="@dimen/category_name_size"/>

</nz.co.cjc.base.framework.views.FRelativeLayout>