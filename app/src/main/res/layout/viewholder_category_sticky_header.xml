<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_holder_category_height"
    android:background="#ededed"
    android:clickable="false">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/view_holder_category_name_margins"
        android:layout_marginLeft="@dimen/view_holder_category_name_margins"
        android:layout_marginRight="@dimen/view_holder_category_name_margins"
        android:layout_marginStart="@dimen/view_holder_category_name_margins"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

</RelativeLayout>